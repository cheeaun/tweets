<div class="media h-entry" data-twt-id="{{id_str}}">
	{{#user}}
		<a target="_blank" href="https://twitter.com/{{screen_name}}" class="avatar float-left" data-screen-name="{{screen_name}}">
			<img alt="" class="u-photo img-rounded" src="{{profile_image_url}}">
		</a>
	{{/user}}
	<div class="media-body">
		<a target="_blank" href="https://twitter.com/{{#user}}{{screen_name}}{{/user}}/status/{{id_str}}" rel="bookmark" class="permalink float-right">
			<span title="{{datetime}}" class="dt-updated">{{relative_datetime}}</span>
		</a>
		{{#user}}
			<div class="h-card p-author">
				<a target="_blank" href="https://twitter.com/{{screen_name}}" class="screen-name" data-screen-name="{{screen_name}}">
					<b class="p-name">{{name}}</b>
					<span class="p-nickname">@{{screen_name}}</span>
				</a>
			</div>
		{{/user}}
		<div class="content">
			<p class="e-content">{{{content}}}</p>
			<p class="content-footer">
				via {{{source}}}
				{{#in_reply_to_status_id_str}}
					<a href="https://twitter.com/{{in_reply_to_screen_name}}/status/{{in_reply_to_status_id_str}}">in reply to {{in_reply_to_screen_name}}</a>
				{{/in_reply_to_status_id_str}}
				{{#retweeted}}
			 		<br><i class="icon-retweet"></i> Retweeted by {{#retweeted_user}}<a href="https://twitter.com/{{screen_name}}" data-screen-name="{{screen_name}}" title="{{retweeted_datetime}}">@{{screen_name}}</a>{{/retweeted_user}}
				{{/retweeted}}
			</p>
			{{#entities}}
				<div class="media-content">
					{{#media}}
						<a href="{{expanded_url}}" target="_blank"><img src="{{media_url_https}}" alt="" class="img-responsive"></a>
					{{/media}}
				</div>
			{{/entities}}
		</div>
	</div>
</div>